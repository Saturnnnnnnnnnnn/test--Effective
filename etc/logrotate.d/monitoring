/var/log/monitoring.log {
    daily
    rotate 7
    compress
    missingok
    notifempty
    create 0640 monitoring monitoring
    sharedscripts
    postrotate
        # Посылаем HUP чтобы сервис мог открыть новый лог-файл, если он его использует
        # Для нашего systemd-oneshot это бесполезно, но оставляем на всякий случай
        /bin/systemctl kill -s HUP monitor-test.service >/dev/null 2>&1 || true
    endscript
}
